{% extends 'base.html.twig' %}

{% block title %}User registration{% endblock %}

{% block body %}
	{% if user %}
	<h5>Account confirmed!</h5>
	<p>Your user is created and ready to use in App. You can now login
		<a href="{{ path('security_login') }}">here</a></p>
	{% else %}
		Could not confirm your account. Please check your e-mail.
	{% endif %}
{% endblock %}