{% extends 'base.html.twig' %}

{% block title %}Notifications{% endblock %}

{% block body %}
	<div class="card">
		{% if notifications|length %}
		<div class="card-body">
			<h5>Unread notifications</h5>
		</div>

		<ul class="list-group list-group-flush">
			{%  for notification in notifications %}
				<li class="list-group-item">
					{% if notification is like %}
						<a href="{{ path('micro_post_user', {'username': notification.likedBy.username}) }}">
							{{ notification.likedBy.username }}</a>	liked your
						<a href="{{ path('micro_post_show', {'id': notification.microPost.id}) }}">post</a>
						<a href="{{ path('notification_mark_as_read', {'id': notification.id}) }}"
						   class="btn btn-outline-primary float-right">X</a>
					{% endif %}
				</li>
			{%  endfor %}
			<li class="list-group-item"><a href="{{ path('notification_mark_all_as_read') }}"
				class="btn btn-outline-primary">Mark all as read</a></li>
		</ul>
		{% else %}
		<div class="card-body">
			<h5>You have no new notifications</h5>
		</di
		{% endif %}
	</div>
{% endblock %}